<h5>プロフィール</h5>
<div>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<p><%= @user.name %></p>
<p>性別 <%= @user.gender %></p>
<p>年齢 <%= @user.age %></p>
</div>

<div><%= link_to "プロフィール編集ボタン",edit_user_path %></div>

<div><%= link_to "投稿する",new_post_path %></div>




<% @posts.each do |post| %>
<p><%= post.title %></p>
<p><%= post.text %></p>
<p><%= image_tag post.image, size: "50x50" %></p>
<%= post.created_at.strftime('%Y/%m/%d') %>

<% post.jobs.each do |job| %>
    <span><%= job.job_name %></span>
<% end %>

<div><%= link_to "詳細",post_path(post) %></div>

<% end %>

