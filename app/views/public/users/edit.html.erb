<div class="container ">
  <div class="row justify-content-center my-3">
  <h5>登録情報の変更</h5>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @user do |f| %>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">名前</label>
        <%= f.text_field :name, class:"form-control"  %>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">年齢</label>
        <%= f.text_field :age, class:"form-control" %>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">性別</label>
        <%= f.text_field :gender, class:"form-control" %>
      </div>

      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <%= f.file_field :profile_image, accept: "image/*" %></br>
      <%= f.submit '保存',class:"btn btn-secondary" %>
    <% end %>
　</div>
　<%= link_to "<<戻る", user_path(@user) %>
</div>