<div class="container">
  <h3 class="text-center my-5">ユーザー一覧</h3>
    <table class="table">
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th></th>
      </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%=link_to user.name,admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted==false %>
                <%= link_to "退会する", unsubscribe_admin_user_path(user), method: :patch, "data-confirm" => "本当に退会しますか？" %>
              <% else %>
                <P>退会済み</P>
              <% end %>
            </td>
          </tr>
        <% end %>
    </table>
</div>