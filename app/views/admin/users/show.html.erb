<div class="container">
  <h3 class="text-center my-5"><%= @user.name %>の投稿一覧</h3>
    <table class="table">
      <tr>
        <td>職業</td>
        <td>タイトル</td>
        <td>投稿日時</td>
        <td></td>
        <td></td>
      </tr>

      <% @posts.each do |post| %>
        <tr>
          <td>
            <ul class="m-0">
              <% post.jobs.each do |job| %>
                <li><%= job.job_name %></li>
              <% end %>
            </ul>
          </td>
          <td><%= post.title %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= link_to "詳細", admin_post_path(post) %>
            <%= link_to "削除", admin_post_path(post), method: :delete, data: {confirm: '削除しても良いですか？'} %>
          </td>
        </tr>
      <% end %>
    </table>
  <%= link_to "<<戻る", admin_users_path %>
</div>